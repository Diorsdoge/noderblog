
<%- include header%>
<% if (user) { %>
<p>
  <span><a href="/edit/<%= post._id %>">编辑</a></span>
  <span><a href="/remove/<%= post._id %>">删除</a></span>
</p>
<% } %>
<p>
  作者：<a href="/u/<%= post.author %>"><%= post.author %></a> | 
  日期：<%= post.time.minute %> |
    标签：
  <% post.tags.forEach(function (tag, index) { %>
    <% if (tag) { %>
      <a class="tag" href="/tags/<%= tag %>"><%= tag %></a>
    <% } %>
  <% }) %>
</p>
<p><%- post.content %></p>
<p>阅读：<%= post.pv %> | 评论：<%= comments.length %></p>

<%- include comment %>
<%- include footer %>