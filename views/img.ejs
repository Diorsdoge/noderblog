
<%- include header%>
<% if (user) { %>
<p>
  <span><a href="/edit/<%= image._id %>">编辑</a></span>
  <span><a href="/remove/<%= image._id %>">删除</a></span>
</p>
<% } %>
<p>
  作者：<a href="/img/<%= image.author %>"><%= image.author %></a> | 
  日期：<%= image.time.minute %> |
    标签：
  <% image.tags.forEach(function (tag, index) { %>
    <% if (tag) { %>
      <a class="tag" href="/tags/<%= tag %>"><%= tag %></a>
    <% } %>
  <% }) %>
</p>
<p><img src="<%= image.path %>" /></p>
<p><%- image.description %></p>
<p>阅读：<%= image.pv %> | 评论：<%= comments.length %></p>

<%- include comment %>
<%- include footer %>